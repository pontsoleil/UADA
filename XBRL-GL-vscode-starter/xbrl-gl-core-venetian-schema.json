{
    "$schema": "http://json-schema.org/draft/2020-12/schema",
    "title": "XBRL GL Core Module Schema (Venetian Blind)",
    "description": "Venetian blind JSON Schema example for XBRL GL core module using definitions and references.",
    "type": "object",
    "properties": {
        "accountingEntries": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/AccountingEntry"
            }
        }
    },
    "required": [
        "accountingEntries"
    ],
    "$defs": {
        "AccountingEntry": {
            "type": "object",
            "properties": {
                "entryHeader": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/EntryHeader"
                    }
                }
            },
            "required": [
                "entryHeader"
            ]
        },
        "EntryHeader": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "date": {
                    "type": "string",
                    "format": "date"
                },
                "description": {
                    "type": "string"
                },
                "entryDetail": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/EntryDetail"
                    }
                }
            },
            "required": [
                "id",
                "date"
            ]
        },
        "EntryDetail": {
            "type": "object",
            "properties": {
                "lineNumber": {
                    "type": "integer"
                },
                "accountCode": {
                    "type": "string"
                },
                "debitAmount": {
                    "type": "number"
                },
                "creditAmount": {
                    "type": "number"
                },
                "description": {
                    "type": "string"
                }
            },
            "required": [
                "lineNumber",
                "accountCode"
            ]
        }
    }
}