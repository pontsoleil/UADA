<?xml version="1.0" encoding="UTF-8"?>
<xs:schema targetNamespace="http://www.xbrl.org/gl/ci" elementFormDefault="qualified" attributeFormDefault="unqualified"
  xmlns:xs="http://www.w3.org/2001/XMLSchema"
  xmlns:xbrli="http://www.xbrl.org/2003/instance"
  xmlns:link="http://www.xbrl.org/2003/linkbase"
  xmlns:xlink="http://www.w3.org/1999/xlink"
  xmlns:xbrldt="http://xbrl.org/2005/xbrldt"
  xmlns:enum2="http://xbrl.org/2020/extensible-enumerations-2.0"
  xmlns:ci="http://www.xbrl.org/gl/ci">
  <xs:annotation>
    <xs:appinfo>
      <!-- linkbaseRef -->
      <link:linkbaseRef xlink:type="simple" xlink:href="ci-refdoc-def.xml" xlink:title="Definition"
        xlink:role="http://www.xbrl.org/2003/role/definitionLinkbaseRef" xlink:arcrole="http://www.w3.org/1999/xlink/properties/linkbase"/>
      <!-- roleType -->
      <link:roleType id="link_ci-refdoc-table" roleURI="http://www.xbrl.org/gl/ci/role/ci-refdoc-table">
        <link:usedOn>link:definitionLink</link:usedOn>
      </link:roleType>
      <link:roleType id="link_status-domain" roleURI="http://www.xbrl.org/gl/ci/role/status-domain">
        <link:usedOn>link:definitionLink</link:usedOn>
      </link:roleType>
    </xs:appinfo>
  </xs:annotation>
  <!-- Imports (locations are illustrative) -->
  <xs:import namespace="http://www.xbrl.org/2003/instance" schemaLocation="http://www.xbrl.org/2003/xbrl-instance-2003-12-31.xsd"/>
  <xs:import namespace="http://xbrl.org/2005/xbrldt" schemaLocation="http://www.xbrl.org/2005/xbrldt-2005.xsd"/>
  <xs:import namespace="http://xbrl.org/2020/extensible-enumerations-2.0" schemaLocation="http://www.xbrl.org/2020/extensible-enumerations-2.0.xsd"/>

  <!-- ========================================================= -->
  <!-- Typed-dimension “row key” for repeating CI_Referenced_Document -->
  <!-- A typed dimension references its domain element via @xbrldt:typedDomainRef -->
  <!-- ========================================================= -->
  <!-- Typed domain element (the child of xbrldi:typedMember) -->
  <xs:element name="ciRefDocKey" id="ci_ciRefDocKey" type="xs:string"/>
  <!-- The typed dimension (must be abstract) -->
  <xs:element name="ciRefDocAxis" id="ci_ciRefDocAxis" substitutionGroup="xbrldt:dimensionItem" type="xbrli:stringItemType"
    abstract="true" xbrldt:typedDomainRef="ci-refdoc.xsd#ci_ciRefDocKey" xbrli:periodType="instant"/>
  <!-- Hypercube (table) -->
  <xs:element name="ciRefDocHypercube" id="ci_ciRefDocHypercube" substitutionGroup="xbrldt:hypercubeItem" type="xbrli:stringItemType"
    abstract="true" xbrli:periodType="instant"/>

  <!-- ========================================================= -->
  <!-- BBIE facts (a small subset shown; extend as needed) -->
  <!-- ========================================================= -->
  <xs:element name="issuerAssignedIdentification" id="ci_issuerAssignedIdentification" substitutionGroup="xbrli:item"
    type="xbrli:stringItemType" xbrli:periodType="instant"/>
  <xs:element name="uriIdentification" id="ci_uriIdentification" substitutionGroup="xbrli:item" type="xbrli:anyURIItemType" xbrli:periodType="instant"/>
  <xs:element name="issueDateTime" id="ci_issueDateTime" substitutionGroup="xbrli:item" type="xbrli:dateTimeItemType" xbrli:periodType="instant"/>
  <xs:element name="copyIndicator" id="ci_copyIndicator" substitutionGroup="xbrli:item" type="xbrli:booleanItemType" xbrli:periodType="instant"/>
  <xs:element name="lineIdentifier" id="ci_lineIdentifier" substitutionGroup="xbrli:item" type="xbrli:stringItemType" xbrli:periodType="instant"/>
  <xs:element name="globalIdentification" id="ci_globalIdentification" substitutionGroup="xbrli:item"
    type="xbrli:stringItemType" xbrli:periodType="instant"/>
  <xs:element name="revisionIdentification" id="ci_revisionIdentification" substitutionGroup="xbrli:item"
    type="xbrli:stringItemType" xbrli:periodType="instant"/>
  <xs:element name="nameText" id="ci_nameText" substitutionGroup="xbrli:item" type="xbrli:stringItemType" xbrli:periodType="instant"/>
  <xs:element name="informationText" id="ci_informationText" substitutionGroup="xbrli:item" type="xbrli:stringItemType" xbrli:periodType="instant"/>

  <!-- ========================================================= -->
  <!-- Code BBIE as Extensible Enumeration 2.0 (single value) -->
  <!-- Allowed values come from a domain-member hierarchy, rooted at enum2:domain, traversed in enum2:linkrole -->
  <!-- Facts must contain expanded-name-URI values "namespace#local" -->
  <!-- ========================================================= -->
  <xs:element name="statusCode" id="ci_statusCode" substitutionGroup="xbrli:item" type="enum2:enumerationItemType"
    enum2:domain="ciStatus:StatusDomain" enum2:linkrole="http://www.xbrl.org/gl/ci/role/status-domain" xbrli:periodType="instant"
    xmlns:ciStatus="http://www.xbrl.org/gl/ci/status"/>

  <!-- Repeat similarly for: referenceTypeCode, typeCode, purposeCode, categoryCode, subtypeCode... -->

</xs:schema>
